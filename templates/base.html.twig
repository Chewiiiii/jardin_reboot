<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href={{asset('asset/css/style.css')}} ">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        


    </head>
    <body>

        <header> 
        <div>
            <nav> 
            <ul>

            <li><a href="{{path ('app_accueil')}}"> Accueil</a></li>
            <li><a href="{{path ('app_choix')}}"> Choix</a></li>

            {# {% if app.user% } #}
            {% if is_granted('ROLE_ADMIN') %}
            <li><a href="{{path ('app_haie_crud_index')}}"> Gestion haie</a></li>
            {% endif %}

            {% if is_granted('ROLE_USER') %}
            <li><a href="{{path ('app_logout')}}"> Deconnexion</a></li>
            {% else %}
            <li><a href="{{path ('app_login')}}"> Connexion</a></li>
            <li><a href="{{path ('app_register')}}"> Insciption</a></li>
            {% endif %}

            </ul>
            </nav>
        </div>
        </header>


        {% block body %}
        {% endblock %}
    </body>
</html>
